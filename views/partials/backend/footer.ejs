<script>
  var xhttp;
  xhttp=new XMLHttpRequest();
  xhttp.onreadystatechange = function() {
    if (this.readyState == 4 && this.status == 200) {
      document.getElementById("unread").innerHTML = this.responseText
    }
  };
  xhttp.open("GET", "/api/unredmessages", true);
  xhttp.send();
</script>

