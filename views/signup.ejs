<!doctype html>
<html>

<head>
    <% include partials/resourses/styles-bootstrap %>
    <link rel="stylesheet" href="styles/style.css">
    <title><%=identity.title %></title>
</head>

<body>
    <div class="container">
        <% include partials/frontend/header %>
        <% include partials/frontend/nav %>
        <main class="han-main">
            <form class="han-usrforms" id="signup" name="signup" method="post" action="/signup">
                <div class="form-group">
                    <label for="email">Email address</label>

                    <% if(formData && formData.email) { %>
                        <input name="email" value="<%=formData.email%>" type="email" autofocus class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email">
                    <% } else { %>
                        <input name="email" type="email" autofocus class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email">
                    <% } %>     
                    
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    <% if ( message && message.email ) { %>
                        <div class="alert alert-danger" role="alert"><%-message.email.join('<br>') %></div>
                    <% } %>
                    
                </div>
                  <div class="form-group">
                    <label for="username">Username</label>
                    <% if(formData && formData.username) { %>
                        <input name="username" value="<%=formData.username%>" type="text" class="form-control" id="username" aria-describedby="usernameHelp" placeholder="Enter username">
                    <% } else { %>
                        <input name="username" type="text" class="form-control" id="username" aria-describedby="usernameHelp" placeholder="Enter username">
                    <% } %>

                    <small id="usernameHelp" class="form-text text-muted">We'll never share your username with anyone else.</small>
                    <% if ( message && message.username ) { %>
                        <div class="alert alert-danger" role="alert"><%-message.username.join('<br>') %></div>
                    <% } %>

                </div>
                  <div class="form-group">
                    <label for="password">Password</label>
                    <input name="password" type="password" class="form-control" id="password" placeholder="Password">
                    <% if ( message && message.password ) { %>
                        <div class="alert alert-danger" role="alert"><%-message.password.join('<br>') %></div>
                    <% } %>  
                </div>
                  <div class="form-check">
                    <input name="agree" type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="agree">Agree with ...</label>
                  </div>
                  <input type="submit" type="submit" class="btn btn-primary" value="Sign Up">
            </form>
        </main>
        <% include partials/frontend/footer %>
    </div>

    <% include partials/resourses/scripts-bootstrap %>
</body>

</html>